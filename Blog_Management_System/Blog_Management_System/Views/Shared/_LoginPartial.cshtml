@using Microsoft.AspNetCore.Identity
@using Blog_Management_System.Areas.Identity.Data

@inject SignInManager<Application_user> SignInManager
@inject UserManager<Application_user> UserManager

<style>
    .nav-item .nav-link {
        transition: background-color 0.3s, color 0.3s;
        border: 1px solid transparent;
        border-radius: 5px;
    }

    .nav-link:hover {
        background-color: #0056b3;
        color: #fff;
        border-color: #0056b3;
    }
</style>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    
    <li class="nav-item" style="padding-top:0px;padding-bottom:0px;margin-bottom:0px;">
            <p class="nav-link text-dart" style="padding-bottom:0px;margin-bottom:0px;">Hello @UserManager.GetUserName(User)!</p>
        
    </li>
        <li class="nav-item" style="padding-top:0px;padding-bottom:0px;margin-bottom:0px;">
            <form id="logoutForm" style="padding-bottom:0px;margin-bottom:0px;" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index1", "Home", new { area = "" })">
                <button id="logout" style="padding-bottom:0px;margin-bottom:0px;" type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
   
    
}
</ul>
