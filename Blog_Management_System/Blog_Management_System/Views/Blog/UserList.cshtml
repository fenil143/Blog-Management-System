@model List<BlogManagement.Models.Customer>
<style>
    .user-card {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        height: 120px;
        margin: 10px;
        padding: 10px;
        position: relative;
    }

        .user-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
        }

        .user-card .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .user-card .card-subtitle {
            font-size: 0.85rem;
            color: #777;
            margin: 5px 0;
        }

        .user-card .email-phone {
            display: flex;
            flex-direction: column; 
        }

            .user-card .email-phone i {
                margin-right: 5px;
            }

        .user-card .btn-primary {
            background-color: #007BFF;
            border-color: #007BFF;
            position: absolute;
            bottom: 10px;
            right: 10px;
        }

            .user-card .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
</style>

<br />
<div class="container">
    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-4">
                <div class="user-card">
                    <div class="card-body">
                        <h5 class="card-title">@user.FirstName @user.LastName</h5>
                        <div class="email-phone">
                            <p class="card-subtitle">
                                Id :- @user.Email
                            </p>
                            <p class="card-subtitle">
                                Phone :- @user.Phone
                            </p>
                        </div>
                        <a asp-controller="Blog" asp-action="UserBlogs" asp-route-userId="@user.Id" class="btn btn-primary">View Blogs</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
